<Page loaded="loaded" actionBarHidden="true">
    <ScrollView>
        <StackLayout style="background-color: #2196F3;">
            <Image src="res://logo" stretch="none" horizontalAlignment="center" />

            <TextField text="{{ email }}" id="email" hint="Email Address" keyboardType="email" autocorrect="false" autocapitalizationType="none" cssClass="inputField"/>
            <TextField text="{{ password }}" id="password" secure="true" hint="Password" cssClass="inputField"/>

            <GridLayout>
                <Button text="Sign Up" tap="register" cssClass="signUp" />
                <ActivityIndicator busy="{{ authenticating }}" />
            </GridLayout>
            <Button text="Already have an account? Sign in" tap="logIn" cssClass="signUp"/>
        </StackLayout>
    </ScrollView>
</Page>