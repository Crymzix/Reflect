<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="loaded" actionBarHidden="true">
    <StackLayout cssClass="gallery-viewing">
        <StackLayout id="image" cssClass="image">
            <Image src="{{ image_url }}"  id="{{ image_id }}"
                   horizontalAlignment="center" swipe="swipePicture" cssClass="image-pic" />
            <ActivityIndicator busy="{{ isLoading }}" verticalAlignment="center" />
        </StackLayout>
        <StackLayout cssClass="action-buttons">
            <Button id="delete" text="X" tap="deletePhoto" cssClass="deletePhoto"/>
        </StackLayout>
    </StackLayout>
</Page>