<Page loaded="loaded" actionBarHidden="true">
    <StackLayout style="background-color: #BBDEFB;">
        <StackLayout>
            <GridLayout cssClass="action-bar">
                <GridLayout cssClass="action-wrap" tap="back" columns="auto" horizontalAlignment="left">
                    <Image stretch="none" style="margin-left:20;vertical-align:center;horizontal-align:left;"
                           src="res://ic_action_navigation_arrow_back"/>
                </GridLayout>
                <Label text="Event" cssClass="action-bar-title"/>
            </GridLayout>
        </StackLayout>
        <ScrollView>
            <StackLayout>
                <Image id="eventCover" src="{{ eventCoverPhoto }}" cssClass="event-photo"
                       stretch="aspectFill"/>
                <Label id="eventTitle" text="Cool Event"/>
                <StackLayout orientation="horizontal">
                    <Label id="eventDate" text="10/2/2016"/>
                    <Label id="eventTime" text="07:45"/>
                </StackLayout>
                <Label id="eventLocation" text="My pants"/>
                <Label id="eventDescription" text="Fun party with lots of fun and cool stuff."/>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>