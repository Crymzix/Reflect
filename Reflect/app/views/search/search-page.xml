<Page loaded="loaded" actionBarHidden="true">
    <StackLayout style="background-color: #BBDEFB;">
        <StackLayout>
            <GridLayout cssClass="action-bar">
                <GridLayout cssClass="action-wrap" tap="back" columns="auto" horizontalAlignment="left">
                    <Image stretch="none" style="margin-left:20;vertical-align:center;horizontal-align:left;"
                           src="res://ic_action_navigation_arrow_back"/>
                </GridLayout>
                <Label text="Search" cssClass="action-bar-title"/>
            </GridLayout>
        </StackLayout>
        <StackLayout>
            <SearchBar  hint="Hashtag" text="{{ hashtagSearch }}" cssClass="search" textFieldBackgroundColor="white" id="hashtagSearch" />
            <SearchBar  hint="Location" text="{{ locationSearch }}" cssClass="search" textFieldBackgroundColor="white" id="locationSearch"/>
            <SearchBar hint="Keywords" text="{{ keywordSearch }}" cssClass="search" textFieldBackgroundColor="white" id="keywordSearch" />
            <Button tap="searchEvents" cssClass="Button" text="Search" />
        </StackLayout>
    </StackLayout>
</Page>