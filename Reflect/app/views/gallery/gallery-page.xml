<Page loaded="loaded" actionBarHidden="true">
    <StackLayout style="background-color: #000;">
        <Image src="{{ image_url }}"  id="{{ image_id }}" stretch="none"
               horizontalAlignment="center" swipe="swipePicture" cssClass="image"/>

        <Button text="N" tap="swipeLeft" cssClass="rejectPhoto"/>
        <Button text="Y" tap="swipeRight" cssClass="acceptPhoto"/>
    </StackLayout>
</Page>